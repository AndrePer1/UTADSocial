@model PL1_G1_1.Models.Grupo

@{
    ViewData["Title"] = "Editar";
}

<h1 style="color:white">Edita o teu Grupo</h1>
<hr />
<div style="color:white" class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdGrupo" />
            <input type="hidden" asp-for="IdDono"/>
            <input type="hidden" asp-for="DataCriacao" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label" asp-for="Acesso">Tipo do Grupo: </label>
                <select asp-for="Acesso" class="form-control">
                    <option value="true">Público </option>
                    <option value="false">Privado</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <label style="color:white">Numero de Participantes: @ViewBag.Participantes</label>
</div>
<h3 style="color:white">Lista de Participantes:</h3>
<table style="color:white">
    @foreach (var participante in ViewBag.Nome)
    {
        <tr>
            <td>@participante</td>
            <td>
                     <a class="btn btn-primary" style="background-color:red" data-ajax="true" data-ajax-method="get" data-ajax-mode="replace" asp-action="EliminarParticipante" asp-route-idgrupo="@Model.IdGrupo" asp-route-nome="@participante"> X </a>
            </td>
        </tr>
    }
</table>
<div>
    <a class="btn btn-primary" asp-action="VerGrupos">Voltar</a>
</div>

<div>
    <a class="btn btn-primary" asp-action="Delete"  asp-route-id="@Model?.IdGrupo" >Delete</a>
</div>


