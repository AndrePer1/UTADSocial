@model PL1_G1_1.Models.Grupo

@{
    ViewData["Title"] = "Create";
}
@if (TempData.ContainsKey("Erro"))
{
    <div class="alert alert-danger">
        @TempData["Erro"]
    </div>
}

<h1 style="color:white">Cria o teu Grupo</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div style="position:relative;top:30px;left:90px;background-color:#4443F9;padding:20px;width:300px;border-radius:4px" class="form-group">
                <label style="color:white" asp-for="Nome" class="control-label"></label>
                <input style="width:250px;background-color:#D9D9D9" asp-for="Nome" class="form-control"/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div style="position:relative;top:200px;left:450px;background-color:#4443F9;padding:20px;border-radius:4px" class="form-group">
                <label style="color:white" asp-for="Descricao" class="control-label">Descrição</label>
                <textarea style="height:100px;background-color:#D9D9D9" asp-for="Descricao" class="form-control" placeholder="Adicione uma breve descrição sobre o grupo..."></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div style="position:relative;left:950px;bottom:230px;background-color:#4443F9;padding:20px;border-radius:4px;width:170px" class="form-group">
                <label style="color:white;width:120px" asp-for="Acesso">Tipo do Grupo: </label>
                <select style="width:120px;background-color:#D9D9D9" asp-for="Acesso" class="form-control">
                    <option value="true">Público </option>
                    <option value="false">Privado</option>
                </select>
            </div>

            <div class="form-group">
                <input style="position:relative;top:161px;left:1100px;background-color:#4FC0E8" type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <input style="position:relative;top:125px;background-color:#4FC0E8" type="button" value="Cancelar" class="btn btn-primary" onclick="window.location.href='@Url.Action("VerPublicacoes", "Publicacoes")'"></>
</div>