@model PL1_G1_1.Models.Grupo

@{
    ViewData["Title"] = "Delete";
}


<h3 style="color:white">Queres mesmo apagar este grupo?</h3>
<div>
    <dl style="color:white" class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Acesso)
        </dt>
        @if (Model.Acesso == true)
            {
                <dd class="col-sm-10">       
                      Público       
                </dd>
               
             }
        else
            {
                <dd class="col-sm-10">
                    Privado
                </dd>
            }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataCriacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataCriacao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdGrupo" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-primary" asp-action="VerGrupos">Cancelar</a>
    </form>
</div>
