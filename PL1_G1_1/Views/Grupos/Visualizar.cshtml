@model PL1_G1_1.Models.Grupo

@{
    ViewData["Title"] = "Visualizar";
}

<h1 style="color:white">Visualizar Grupo</h1>

<div>
    <hr />
    <dl style="color:white" class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Acesso)
        </dt>
        @if(Model.Acesso == true)
        {
            <dd class="col-sm-10">
                Público
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                Privado
            </dd>
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataCriacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataCriacao)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="VerGrupos">Voltar à lista</a>
</div>

<div>
    <label style="color:white">Numero de Participantes: @ViewBag.Participantes</label>
</div>

@{
    var urlAderirGrupo = Url.Action("AderirGrupo", "Home", new { idGrupo = ViewBag.IdGrupo });
}

@{
    var urlSairGrupo = Url.Action("SairGrupo", "Home", new { idGrupo = ViewBag.IdGrupo });
}

@if (ViewBag.UsuarioEstaNoGrupo == true)
{
    <a class="btn btn-primary" data-ajax="true" data-ajax-method="post" data-ajax-mode="replace" 
    href="@urlSairGrupo">Sair do Grupo</a>
}
else
{
    <a class="btn btn-primary"data-ajax="true" data-ajax-method="get" data-ajax-mode="replace"
    href="@urlAderirGrupo" >Entrar no Grupo</a>
}
<h3 style="color:white">Lista de Participantes:</h3>
<table style="color:white">
    @foreach (var participante in ViewBag.Nome)
    {
        <tr>
            <td>@participante</td>
          
        </tr>
    }
</table>

