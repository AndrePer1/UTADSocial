@model PL1_G1_1.Models.Publicacao

@{
    ViewData["Title"] = "Editar Publicação";
}

<div class="container">
    <h1 class="text-white">Editar Publicação</h1>
    <hr />

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Edit" asp-controller="Publicacoes" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdPublicacao" />

                <div class="form-group">
                    <label class="text-white" asp-for="TipoPublicacao">Tipo de Publicação:</label>
                    <select class="form-control" asp-for="TipoPublicacao" style="background-color: #D9D9D9;">
                        <option value="Publico">Pública</option>
                        <option value="Privado">Privada</option>
                    </select>
                    <span asp-validation-for="TipoPublicacao" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="text-white" asp-for="Conteudo">Conteúdo:</label>
                    <textarea class="form-control" asp-for="Conteudo" rows="4"></textarea>
                    <span asp-validation-for="Conteudo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="text-white" asp-for="Midia">Nova Mídia:</label>
                    <input type="file" name="Midia" class="form-control" />
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Salvar</button>
                    <a asp-action="VerPublicacoes" class="btn btn-secondary">Voltar à Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

